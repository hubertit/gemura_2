# Frontend image using pre-built .next (no build on server â€” avoids OOM)
FROM node:20-alpine

WORKDIR /app
ENV NODE_ENV=production
ENV PORT=3005

RUN addgroup --system --gid 1001 nodejs && adduser --system --uid 1001 nextjs

COPY .next/standalone ./
COPY .next/static ./.next/static
COPY public ./public

RUN chown -R nextjs:nodejs /app

USER nextjs
EXPOSE 3005

CMD ["node", "server.js"]
